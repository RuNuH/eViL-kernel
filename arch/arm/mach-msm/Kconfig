		bool "6.2.10"
		select MSM_LEGACY_7X00A_AMSS

	config MSM_AMSS_VERSION_6220
		bool "6.2.20"
		select MSM_LEGACY_7X00A_AMSS

	config MSM_AMSS_VERSION_6225
		bool "6.2.20 + New ADSP"
		select MSM_LEGACY_7X00A_AMSS

	config MSM_AMSS_VERSION_6350
		bool "6.3.50"
endchoice

